<!--			<Exec Command="php &quot;$(SolutionDir)build.php&quot; $(SolutionDir) &quot;$(ProjectDir)Server.csproj&quot;" />-->
<!--		</Target>-->
	
    <ItemGroup>
        <Compile Remove="Tool\Log\**" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Remove="Tool\Log\**" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Tool\Log\**" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Internal\Store" />
    </ItemGroup>

</Project>